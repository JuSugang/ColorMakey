<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/remixer_toolbar_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/background2" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/remixer_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linear_gradient2"
            app:titleTextColor="#fff"></android.support.v7.widget.Toolbar>

        <ImageView
            android:id="@+id/remixer_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="60dp"
            android:background="@drawable/bubble" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="173dp">

            <ImageView
                android:id="@+id/loadCamera"
                android:layout_width="103dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginRight="107dp"
                app:srcCompat="@drawable/remixer_camera_click" />

            <ImageView
                android:id="@+id/loadGallery"
                android:layout_width="103dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/remixer_gallery_click" />

            <ImageView
                android:id="@+id/loadColorTable"
                android:layout_width="103dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="107dp"
                app:srcCompat="@drawable/remixer_color_click" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/framelayout_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="255dp">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/remixer_button_background" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/remixerPreview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/mask" />

                <TextView
                    android:id="@+id/remixerRGBtext"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="40dp"
                    android:paddingLeft="10dp"
                    android:text="빨강:\n초록:\n파랑:" />

                <ImageView
                    android:id="@+id/calcButton"
                    android:layout_width="89dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/remixer_calc_click" />
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="만들고 싶은 색을 골라주세요!"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <FrameLayout
            android:id="@+id/framelayout_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp">

            <ImageView
                android:id="@+id/ResultViewBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/remixer_view" />

            <ImageView
                android:id="@+id/ImageResultView"
                android:layout_width="288dp"
                android:layout_height="310dp"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                app:srcCompat="@drawable/remixer_basicview" />
        </FrameLayout>

    </FrameLayout>

</LinearLayout>