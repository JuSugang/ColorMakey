<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/palette_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="60dp"
            android:background="@drawable/bubble" />

        <ImageView
            android:id="@+id/palette_toolbar_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/background2" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linear_gradient2"
            app:titleTextColor="#fff"></android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="가지고계신 색을 등록해주세요!"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/ResultViewBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp"
            app:srcCompat="@drawable/remixer_view" />

        <GridView
            android:id="@+id/palette_gridview"
            android:layout_width="284dp"
            android:layout_height="309dp"
            android:layout_gravity="center"
            android:layout_marginBottom="53dp"
            android:background="#ffffff"
            android:listSelector="@android:color/transparent"
            android:numColumns="3">

        </GridView>

        <ImageView
            android:id="@+id/noColorImage"
            android:layout_width="288dp"
            android:layout_height="310dp"
            android:layout_gravity="center"
            android:layout_marginBottom="53dp"
            android:src="@drawable/no_color"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/paletteInstView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="175dp"
            app:srcCompat="@drawable/remixer_button_background" />

        <TextView
            android:id="@+id/paletteInst1"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="165dp"
            android:gravity="center"
            android:text="사진이나 갤러리를 통해 색을 추가해주세요"
            android:textColor="#606060"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/paletteInst2"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="185dp"
            android:gravity="center"
            android:text="등록된 색은 '색 배합 찾기'에 사용됩니다."
            android:textColor="#606060"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/paletteAddButton"
            android:layout_width="343dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="270dp"
            android:background="@drawable/palette_addbutton_click"
            android:onClick="onClickView" />

    </FrameLayout>

</LinearLayout>