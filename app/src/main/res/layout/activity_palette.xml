<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/palette_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="60dp"
            android:background="@drawable/bubble" />

        <ImageView
            android:id="@+id/palette_toolbar_ground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/background2" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linear_gradient2"
            app:titleTextColor="#fff"></android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="가지고계신 색을 등록해주세요"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/ResultViewBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp"
            app:srcCompat="@drawable/remixer_view" />

        <GridView
            android:id="@+id/palette_gridview"
            android:layout_width="284dp"
            android:layout_height="309dp"
            android:layout_gravity="center"
            android:layout_marginBottom="53dp"
            android:background="#ffffff"
            android:listSelector="@android:color/transparent"
            android:numColumns="3">

        </GridView>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="175dp"
            app:srcCompat="@drawable/remixer_button_background" />

        <ImageButton
            android:id="@+id/color_add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="270dp"
            android:background="@drawable/login_button_click"
            android:onClick="onClickView"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="257dp"
            android:text="색 추가"
            android:textColor="#fff"
            android:textSize="22dp" />

    </FrameLayout>

</LinearLayout>