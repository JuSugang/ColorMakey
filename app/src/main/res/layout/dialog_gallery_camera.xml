<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dip"
    android:layout_height="550dip"
    android:gravity="center"
    android:layout_gravity="center"
    android:weightSum="50">

    <LinearLayout
        android:layout_width="300dip"
        android:layout_height="550dip"
        android:orientation="vertical"
        android:background="#ffffffff"
        >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_weight="5"
            android:background="@drawable/linear_gradient"/>
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:id="@+id/palette_imageView"
            android:scaleType="fitXY"
            android:layout_weight="30"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="horizontal"
            android:layout_marginTop="10dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:id="@+id/showColorLinearLayout"
            android:layout_weight="8"
            android:gravity="center">

            <ImageView
                android:id="@+id/palette_imageView2"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:background="@drawable/mask" />

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:text="선택한 위치의 색상"
                android:layout_gravity="center" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="5">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:background="#FAE0D4"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/register_button"
                android:text="등록"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:background="#FAE0D4"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/cancel_button"
                android:text="취소"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>