<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dip"
    android:layout_height="320dip"
    android:gravity="center"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="-180dp"
        android:paddingLeft="10dip"
        android:paddingRight="10dip">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="색상의 이름을 설정해주세요"
            android:textSize="8pt"
            android:layout_marginTop="20dip"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center"/>
        
        <EditText
            android:layout_width="match_parent"
            android:layout_height="28dip"
            android:id="@+id/color_name_edittext"
            android:background="@drawable/border"
            android:layout_marginTop="16dip"
            android:layout_marginBottom="16dip"
            >

            <requestFocus/> <!--자동 포커스 주기-->
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="20dip">

            <ImageView
                android:id="@+id/new_color_name_cancel_button"
                android:layout_width="150dip"
                android:layout_height="44dip"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/mini_cancel_button_click"
                />

            <ImageView
                android:id="@+id/new_color_name_register_button"
                android:layout_width="150dip"
                android:layout_height="44dip"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/mini_confirm_button_click"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>