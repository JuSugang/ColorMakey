<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mixer_bubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="60dp"
            android:background="@drawable/bubble" />

        <ImageView
            android:id="@+id/mixer_toolbar_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/background2" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linear_gradient2"
            app:titleTextColor="#fff"></android.support.v7.widget.Toolbar>


        <ImageView
            android:id="@+id/mixer_colorlist_background"
            android:layout_width="330dp"
            android:layout_height="134dp"
            android:layout_gravity="center"
            android:layout_marginTop="198dp"
            app:srcCompat="@drawable/mixer_colorlist_background" />

        <ImageView
            android:id="@+id/addButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginRight="125dp"
            android:layout_marginTop="168dp"
            app:srcCompat="@drawable/add_button" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/color_horizontalView"
            android:layout_width="245dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="198dp"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>

        <ImageView
            android:id="@+id/mixer_view_background"
            android:layout_width="330dp"
            android:layout_height="360dp"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/mixer_view_background" />

        <ImageView
            android:id="@+id/color_texture"
            android:layout_width="310dp"
            android:layout_height="294dp"
            android:layout_gravity="center"
            android:layout_marginBottom="73dp"
            android:background="#421523"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/mixer_result" />

        <LinearLayout
            android:id="@+id/ratioView"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:layout_marginTop="96dp"
            android:background="#eeeeee">

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="색을 마음대로 섞어보세요"
            android:textColor="#ffffff"
            android:textSize="24sp" />

    </FrameLayout>

</LinearLayout>
